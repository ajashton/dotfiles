[user]
    email = aj@ajashton.ca
    name = AJ Ashton

[branch]
    sort = -committerdate

[color]
    branch = auto
    diff = auto
    status = auto

[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green

[color "diff"]
    meta = yellow
    frag = magenta bold
    old = red bold
    new = green bold

[color "diff-highlight"]
    oldNormal = red bold
    oldHighlight = red bold 52
    newNormal = green bold
    newHighlight = green bold 22

[color "status"]
    added = yellow
    changed = green
    untracked = cyan

[commit]
    verbose = true

[diff]
    algorithm = histogram

[github]
    user = ajashton

[help]
    autocorrect = prompt

[init]
    defaultBranch = main

[protocol "file"]
    allow = always

[push]
    default = simple

[rebase]
    autosquash = true

[rerere]
# Reuse Recorded Resolution: remember how youâ€™ve resolved a hunk conflict, so
# the next time Git sees the same conflict it can resolve it automatically.
    enabled = true

[alias]
    pushf = push --force-with-lease
    l = log --stat
    lol = log --graph --decorate --pretty=oneline --abbrev-commit
    lola = log --graph --decorate --pretty=oneline --abbrev-commit --all
    ls = ls-tree -r --name-only HEAD
    recent = ! git branch --sort=-committerdate --format=\"%(committerdate:relative)%09%(refname:short)\" | head -10
    s = status -s
    smartlog = log --graph --pretty=format:'commit: %C(bold red)%h%Creset %C(red)[%H]%Creset %C(bold magenta)%d %Creset%ndate: %C(bold yellow)%cd %Creset%C(yellow)%cr%Creset%nauthor: %C(bold blue)%an%Creset %C(blue)[%ae]%Creset%n%C(cyan)%s%n%Creset'
    unpushed = log --branches --not --remotes --no-walk --decorate --oneline
    wdiff = diff --color-words
    whoami = config user.email
[pull]
	rebase = true
