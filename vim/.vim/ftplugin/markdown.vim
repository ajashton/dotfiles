setl breakindent
setl breakindentopt=shift:2
  " `shift:2` indents soft-wrapped lines an additional 2 characters.
  " This makes normal paragraphs look a little weird, but makes lists and
  " blockquotes so much more readable.
setl conceallevel=0
setl colorcolumn=
setl nonumber
setl shiftwidth=4
setl softtabstop=4
setl spell
