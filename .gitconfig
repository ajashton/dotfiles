[core]
    excludesfile = /home/aj/.gitignore

[user]
    email = aj.ashton@gmail.com
    name = AJ Ashton

[color]
    branch = auto
    diff = auto
    status = auto

[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green

[color "diff"]
    meta = yellow
    frag = magenta bold
    old = red bold
    new = green bold

[color "status"]
    added = yellow
    changed = green
    untracked = cyan

[merge]
    tool = meld

[alias]
    lol = log --graph --decorate --pretty=oneline --abbrev-commit
    lola = log --graph --decorate --pretty=oneline --abbrev-commit --all
    s = status -s
    wdiff = diff --color-words
    ls = ls-tree -r --name-only HEAD

[push]
    default = simple

[github]
    user = ajashton
